    <!-- socket.IO -->
    <script src="/socket.io/socket.io.js"></script>
    <script type="text/javascript">
      var socket = io.connect('http://localhost:3000');
      socket.on('connect', function(msg) {
                console.log("connet");
                document.getElementById("connectId").innerHTML =
                "あなたの接続ID::" + socket.socket.transport.sessid;
                document.getElementById("type").innerHTML =
                "接続方式::" + socket.socket.transport.name;
                });
                
                // messageメッセージを受けたとき
                socket.on('message', function(msg) {
                    // メッセージを画面に表示する
                    document.getElementById("receiveMsg").innerHTML = msg.value;
                });
                
                // disconnectionメッセージを受けたとき
                socket.on('disconnection', function(msg) {
                    // メッセージを画面に表示する
                    document.getElementById("receiveMsg").innerHTML = '切断されました';
                    socket.disconnect();
                });

                          
    // messageメッセージを送る
    function SendMsg() {
        //var msg = event.srcElement.value;
     
        //var radioList = document.getElementsById("selectItem");
        var radioList = document.getElementsByName("selectItem");
        var id = "dummy";
        for(var i=0; i<radioList.length; i++){
            if (radioList[i].checked) {
                msg = radioList[i].value;
            }
        }
      
        socket.emit('message', { value: msg });
    }
    
    
    // disconnectionメッセージを送る
    function DisConnect() {
        var msg = socket.socket.transport.sessid + "は切断しました。";
      
        socket.emit('disconnection', { value: msg });
    }
    </script>
 


  </head>

